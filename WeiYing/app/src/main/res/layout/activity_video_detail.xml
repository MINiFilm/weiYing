<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_colorful"
    android:orientation="vertical"
    tools:context="com.weiying.actiity.VideoDetailActivity">
    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFDF0C3D"
        android:text="title"
        android:gravity="center"
        android:textColor="#fff"/>

<com.shuyu.gsyvideoplayer.video.CustomGSYVideoPlayer
    android:id="@+id/custom_player"
    android:layout_width="match_parent"
    android:layout_height="200dp">
</com.shuyu.gsyvideoplayer.video.CustomGSYVideoPlayer>
    <android.support.design.widget.TabLayout
        android:id="@+id/detail_table"
        android:layout_width="match_parent"
        app:tabTextColor="#fcf8ee"
        app:tabIndicatorColor="#669900"
        app:tabSelectedTextColor="#669900"
        android:background="#33ffffff"
        android:layout_height="50dp">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>





</LinearLayout>
